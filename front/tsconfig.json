{
  // Keep telling Nuxt where the generated configs live
  "files": [],
  "references": [
    { "path": "./.nuxt/tsconfig.app.json" },
    { "path": "./.nuxt/tsconfig.server.json" },
    { "path": "./.nuxt/tsconfig.shared.json" },
    { "path": "./.nuxt/tsconfig.node.json" }
  ],
  "compilerOptions": {
    // Point the IDE at our source root so it understands @ imports
    "baseUrl": ".",
    // Document the alias explicitly for the TypeScript plugin
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  }
}
